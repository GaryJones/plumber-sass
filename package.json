{
  "name": "plumber-sass-docs",
  "version": "0.1.0",
  "description": "Real baseline grids with SASS",
  "main": "index.html",
  "scripts": {
    "build-docs": "node-sass --include-path scss scss/docs.scss css/docs.css",
    "build-measure": "node-sass --include-path scss scss/measure.scss css/measure.css",
    "build-demo": "node-sass --include-path scss scss/demo.scss css/demo.css",
    "build": "npm run build-docs && npm run build-tools && npm run build-demo",
    "watch-docs": "npm run build-docs -- --watch",
    "watch-measure": "npm run build-measure -- --watch",
    "watch-demo": "npm run build-demo -- --watch",
    "watch": "npm build -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://jamonserrano@github.com/jamonserrano/plumber-sass.git#gh-pages"
  },
  "author": "Viktor Honti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamonserrano/plumber-sass/issues"
  },
  "homepage": "https://jamonserrano.github.io/plumber-sass",
  "devDependencies": {
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "plumber-sass": "*",
    "sass-lint": "^1.8.2"
  }
}
